{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.eol": "\n",
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "eslint.nodePath": ".yarn/sdks",
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs",
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "jest.debugMode": true,
  "jest.virtualFolders": [
    {
      "name": "api-client",
      "runMode": "on-demand",
      "rootPath": "packages/api-client",
      "commandLine": "yarn jest --selectProjects 'API Client'",
      "dashedArgs": true
    },
    {
      "name": "backend",
      "runMode": "on-demand",
      "rootPath": "packages/backend",
      "commandLine": "yarn jest --selectProjects Backend",
      "dashedArgs": true
    },
    {
      "name": "db-client",
      "runMode": "on-demand",
      "rootPath": "packages/db-client",
      "commandLine": "yarn jest --selectProjects 'DB Client'",
      "dashedArgs": true
    },
    {
      "name": "frontend",
      "runMode": "on-demand",
      "rootPath": "packages/frontend",
      "commandLine": "yarn jest --selectProjects Frontend",
      "dashedArgs": true
    },
    {
      "name": "types",
      "runMode": "on-demand",
      "rootPath": "packages/types",
      "commandLine": "yarn jest --selectProjects Types",
      "dashedArgs": true
    }
  ],
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}
