    "mongodb": "^6.3.0",
    "oauth2-bearer": "https://github.com/ESP-Number-One/oauth2-bearer",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^6.0.1"
  },
  "devDependencies": {
    "@esp-group-one/types": "workspace:^",
    "@types/cors": "^2.8.15",
